let a=0;
for (let i=0;i<1000;++i) {
    if(i%3==0 || i%5==0) {
        a=a+i;
    }
}

console.log(a); 


let arr=[0,1];
let sum=0;
for(let i=2;i<4000000;i++) {
    arr.push(arr[i-1]+arr[i-2]);
}

for (let i=0;i<arr.length;i++) {
    if (arr[i]%2==0) {
        sum+=arr[i];
    }
}

console.log(sum);
